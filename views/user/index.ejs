<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang chủ</title>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    />

    <!-- Font Awesome Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <div class="container">
      <%- include('../partials/navbar.ejs') %>

      <div class="form-group">
        <% if (error_verification.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show">
              <%= error_verification %>
            </div>
        <% } %>
      </div>
      <!-- Information -->
      <div
        class="profile d-flex bg-white border rounded shadow-sm overflow-hidden my-5"
      >
        <div class="col col-6">
          <div class="row m-5 ">
            <div class="col col-4">
              <span>Họ tên:</span>
            </div>
            <div class="col col-8">
              <strong><%= userDetail.fullname %></strong>
            </div>
            <div class="w-100 mb-2"></div>
            <div class="col col-4">
              <span>Số điện thoại: </span>
            </div>
            <div class="col col-8">
              <strong><%= userDetail.phone %></strong>
            </div>
            <div class="col col-4">
              <span>Email:</span>
            </div>
            <div class="col col-8">
              <strong><%= userDetail.email %></strong>
            </div>
            <div class="w-100 mb-2"></div>
            <div class="col col-4">
              <span>Ngày sinh:</span>
            </div>
            <div class="col col-8">
              <strong><%= userDetail.date %></strong>
            </div>
            <div class="w-100 mb-2"></div>
            <div class="col col-4">
              <span>Địa chỉ:</span>
            </div>
            <div class="col col-8">
              <strong><%= userDetail.address %></strong>
            </div>
            <div class="w-100 mb-2"></div>
            <div class="col col-4">
              <span>Tên tài khoản:</span>
            </div>
            <div class="col col-8">
              <strong><%= userDetail.username %></strong>
            </div>
            <div class="w-100 mb-2"></div>
            <div class="col col-4">
              <span>Mật khẩu:</span>
            </div>
            <div class="col col-8">
              <strong>******</strong>
            </div>
            <div class="w-100 mb-2"></div>
          </div>
          <div class="wrap-img col m-5">
            <p class="text-uppercase text-center fw-bold">Mặt trước CMND</p>
            <img
              src="https://picsum.photos/660/300"
              class="img-fluid rounded"
              alt="img"
            />
            <p class="text-uppercase text-center fw-bold">Mặt sau CMND</p>
            <img
              src="https://picsum.photos/660/300"
              class="img-fluid rounded"
              alt="img"
            />
          </div>
        </div>
        <div class="information col col-6 mt-5">
          <h3 class="text-center">Lịch sử giao dịch</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-4" style="height: 150px">
          <div class="border shadow-sm rounded bg-white p-3 h-100">
            <h3 class="text-uppercase mb-3">Tài khoản</h3>
            <p><strong>Số dư tài khoản: </strong> <%= userDetail.balance %> đ</p>
            <div class="status">
              <p class="d-flex align-items-center">
                <strong>Trạng thái:</strong>
                <span class="badge bg-warning text-dark ms-2"
                  ><%= userDetail.status %></span
                >
              </p>
            </div>
          </div>
        </div>
        <div class="col-8" style="height: 150px">
          <div class="border shadow-sm rounded bg-white p-3 h-100">
            <h3 class="text-uppercase text-center mb-3">Tính năng</h3>
            <div class="d-flex align-items-center justify-content-center">
              <a href="/changePassword" class="btn btn-primary me-3"
                >Đổi mật khẩu</a
              >
              <a href="/reuploadPhoto" class="btn btn-primary me-3"
                >Bổ sung thông tin ảnh CMND</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

