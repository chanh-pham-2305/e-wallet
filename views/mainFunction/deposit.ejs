<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <!-- custom css file link  -->
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/main.js"></script>
    <title>Nạp tiền</title>

    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    />
</head>
<body>

<div class="container">
    <%- include('../partials/navbar.ejs') %>
    <form action="/function/deposit" method="post">
        <div class="row">
            <div class="col">
                <h3 class="title">NẠP TIỀN</h3>
                <div class="inputBox">
                    <span>Số tài khoản:</span>
                    <input type="text" id="cardCode" name="cardCode" placeholder="123xxx" value="<%= cardCode %>">
                </div>
                <div class="inputBox">
                    <span>Ngày hết hạn:</span>
                    <input type="date" id="date" name="date" placeholder="dd/yy/mmm" value="<%= date %>">
                </div>
                <div class="inputBox">
                    <span>Mã CVV:</span>
                    <input type="text" id="CVV" name="CVV" placeholder="1xx" value="<%= CVV %>">
                </div>
                <div class="inputBox">
                    <span>Số tiền cần nạp:</span>
                    <input type="number" id="money" name="money" placeholder="10000" value="<%= money %>">
                </div>
                <div class="form-group">
                    <% if (error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show">
                          <%= error %>
                        </div>
                    <% } %>
                </div>
        </div>
        <input type="submit" value="Nạp tiền" class="submit-btn">
        <%- include('../partials/back.ejs') %>
    </form>
</div>

    
</body>

</html>