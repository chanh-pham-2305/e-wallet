<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- custom css file link  -->
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/main.js"></script>
    <title>Mua thẻ</title>

    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    />
</head>
<body>

<div class="container">
    <%- include('../partials/navbar.ejs') %>
    <form action="/function/buycard" method="post">
        <div class="row">
            <div class="col">
                <h3 class="title">MUA THẺ ĐIỆN THOẠI</h3>
                <div class="selectBox">
                    <span>Nhà mạng: </span>
                    <select name="provider" id="provider">
                        <option value="11111">Viettel</option>
                        <option value="22222">Mobifone</option>
                        <option value="33333">Vinaphone</option>
                    </select>
                </div>
                <div class="selectBox">
                    <span>Mệnh giá thẻ:</span>
                    <select name="cardValue" id="cardValue">
                        <option value="10000">10.000đ`</option>
                        <option value="20000">20.000đ</option>
                        <option value="50000">50.000đ</option>
                        <option value="100000">100.000đ</option>
                    </select>
                </div>
                <div class="inputBox">
                    <span>Số lượng thẻ:</span>
                    <input type="number" id="amount" name="amount" min="1" max="5" placeholder="1">
                </div>
                <div class="form-group">
                    <% if (error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show">
                            <%= error %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <input type="submit" value="Thanh toán" class="submit-btn">
        <%- include('../partials/back.ejs') %>
    </form>
</div>
</body>
</html>
